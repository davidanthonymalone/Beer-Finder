<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/rowPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="â‚¬3.99"
        android:textColor="@color/footerFontCol"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText"
        android:layout_alignBottom="@+id/imgDelete"
        android:layout_toStartOf="@+id/imgDelete"
        android:layout_marginEnd="20dp" />

    <ImageView
        android:id="@+id/imgDelete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:contentDescription="fav"
        android:src="@drawable/ic_d"
        tools:ignore="HardcodedText"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/rowBeerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:gravity="center_vertical"
        android:text="Beer Name"
        android:textColor="@color/footerFontCol"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText"
        android:layout_marginStart="11dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/lngText"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Space
        android:layout_width="50dp"
        android:layout_height="15dp"
        android:layout_below="@+id/rowBar"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/rowBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="Bar"
        android:textSize="11sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,SmallSp"
        android:layout_below="@+id/rowBeerName"
        android:layout_alignStart="@+id/rowBeerName" />

</RelativeLayout>
